<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="720" prefWidth="1280" stylesheets="@../css/dashboard.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.DashboardController">

    <!-- Background -->
    <AnchorPane prefHeight="720.0" prefWidth="1280.0" >

        <HBox alignment="CENTER_LEFT" prefWidth="1280.0" spacing="15" styleClass="top-bar" stylesheets="@../css/dashboard.css">

            <!-- Left Side: Game Night Logo + Label -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label prefHeight="27.0" prefWidth="128.0" styleClass="platform-name" text="Game Night" />
            </HBox>

            <!-- Right Side: Search Bar & Buttons -->
            <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="1096.0" spacing="10" styleClass="top-bar-buttons">
                <TextField fx:id="searchBar" promptText="Search Players..." styleClass="search-bar" />
                <Button fx:id="dashboardButton" styleClass="active-nav-button" text="Dashboard" />
                <Button fx:id="gameLibraryButton" styleClass="nav-button" text="Game Library" />
                <Button fx:id="leaderboardButton" styleClass="nav-button" text="Leaderboard" />
                <Button fx:id="profileButton" styleClass="nav-button" text="Profile" />
                <Button fx:id="settingsButton" styleClass="nav-button" text="Settings" />
            </HBox>
        </HBox>

        <!-- Profile Summary -->
        <VBox layoutX="40" layoutY="80" spacing="10">
            <Label styleClass="welcome-text" text="Welcome back," />
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="username" styleClass="username" text="Username" />
            </HBox>
        </VBox>

        <!-- General Stats -->
        <VBox layoutX="40.0" layoutY="170.0" spacing="10">
            <Label styleClass="section-title" text="General Stats" />
            <HBox spacing="20">
                <VBox styleClass="stats-card">
                    <Label styleClass="stats-label" text="Most Played Game" />
                    <Label styleClass="stats-value" text="Connect 4" />
                </VBox>
                <VBox styleClass="stats-card">
                    <Label styleClass="stats-label" text="Total Games Played" />
                    <Label styleClass="stats-value" text="128" />
                </VBox>
                <VBox styleClass="stats-card">
                    <Label styleClass="stats-label" text="Total Wins" />
                    <Label styleClass="stats-value" text="64" />
                </VBox>
            </HBox>
        </VBox>

        <!-- Game-Specific Stats -->
        <VBox layoutX="40" layoutY="320" spacing="10">
            <Label styleClass="section-title" text="Game-Specific Stats" />
            <HBox spacing="10">
                <Button prefHeight="40.0" prefWidth="77.0" styleClass="game-tab-selected" text="Connect 4" />
                <Button styleClass="game-tab" text="Whist" />
                <Button styleClass="game-tab" text="Checkers" />
            </HBox>
            <HBox spacing="20">
                <VBox styleClass="stats-card">
                    <Label styleClass="stats-label" text="Game Level" />
                    <Label styleClass="stats-value" text="Level 3" />
                </VBox>
                <VBox styleClass="stats-card">
                    <Label styleClass="stats-label" text="Total Games Played" />
                    <Label styleClass="stats-value" text="128" />
                </VBox>
                <VBox styleClass="stats-card">
                    <Label styleClass="stats-label" text="Total Wins" />
                    <Label styleClass="stats-value" text="64" />
                </VBox>
            </HBox>
        </VBox>

    </AnchorPane>
</AnchorPane>
