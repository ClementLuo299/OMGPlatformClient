<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gui_controllers.LoginController">
    <AnchorPane prefHeight="800.0" prefWidth="1500">
        <!-- Title - centered at top -->
        <Label layoutX="0" layoutY="80.0" prefHeight="32.0" styleClass="title" text="Online Multiplayer Board Game Platform" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" />
        
        <!-- Container for both login forms -->
        <HBox alignment="CENTER" spacing="50" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="190.0">
            <!-- Standard Login Form -->
            <VBox alignment="TOP_CENTER" spacing="15" styleClass="login-form">
                <Label styleClass="subtitle" text="Welcome! Please enter your details." />
                
                <!-- Username Field -->
                <Label styleClass="input-label" text="Username" />
                <TextField fx:id="usernameField" promptText="Enter your username" styleClass="input-field" />
                
                <!-- Password Field -->
                <Label styleClass="input-label" text="Password" />
                <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" />
                
                <!-- Remember Me & Forgot Password -->
                <!-- TODO: Add remember me and forgot password functionality -->
                <HBox alignment="CENTER_LEFT" spacing="60">
                    <CheckBox fx:id="rememberMe" styleClass="checkbox" text="Remember me" visible="false" />
                    <Hyperlink fx:id="forgotPasswordLink" styleClass="link" text="Forgot password" />
                </HBox>
                
                <!-- Sign In Button -->
                <Button fx:id="loginButton" styleClass="login-button" text="Sign in" />
                
                <!-- Create an Account Button -->
                <Button fx:id="createAccountButton" styleClass="create-account-button" text="Create an Account" />
            </VBox>
            
            <!-- Vertical Line -->
            <Line endY="300" styleClass="divider-line" />
            
            <!-- Guest Login Form -->
            <VBox alignment="TOP_CENTER" spacing="15" styleClass="login-form">
                <Label styleClass="subtitle" text="Continue as Guest" />
                <Label styleClass="input-label" text="Username" />
                <TextField fx:id="guestUsernameField" promptText="Enter your username" styleClass="input-field" /> <!-- Spacer to align the button with the other form -->
                <Button fx:id="guestLoginButton" styleClass="login-button" text="Sign in" onAction="#onGuestLoginClicked"/>
            </VBox>
        </HBox>
        
        <stylesheets>
            <URL value="@../css/login.css" />
        </stylesheets>
    </AnchorPane>
</StackPane>
