<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gui_controllers.LoginController">

<AnchorPane maxHeight="Infinity" maxWidth="Infinity" prefHeight="800.0" prefWidth="1400.0">

    <!-- App Title -->
        <Label alignment="CENTER" maxWidth="Infinity" styleClass="title" text="Online Multiplayer Board Game Platform" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="80.0" />

        <!-- Login Forms Container -->
        <HBox alignment="CENTER" spacing="60" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="190.0">

            <!-- Standard Login Form -->
            <VBox alignment="TOP_CENTER" spacing="15" styleClass="login-form">
                <Label styleClass="subtitle" text="Welcome! Please enter your details." />

                <!-- Username -->
                <Label styleClass="input-label" text="Username" labelFor="$usernameField"/>
                <TextField fx:id="usernameField" promptText="Enter your username" styleClass="input-field" />

                <!-- Password -->
                <Label styleClass="input-label" text="Password" labelFor="$passwordField"/>
                <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="input-field" />

                <!-- Options: Remember Me + Forgot Password -->
                <HBox alignment="CENTER_LEFT" spacing="60">
                    <CheckBox fx:id="rememberMe" styleClass="checkbox" text="Remember me" />
                    <Hyperlink fx:id="forgotPasswordLink" onAction="#onForgotPasswordClicked" styleClass="link" text="Forgot password" />
                </HBox>

                <!-- Login & Register -->
                <Button fx:id="loginButton" onAction="#onLoginClicked" styleClass="login-button" text="Sign in" />
                <Button fx:id="createAccountButton" onAction="#onCreateAccountClicked" styleClass="create-account-button" text="Create an Account" />
            </VBox>

            <!-- Divider -->
            <Line endY="300" styleClass="divider-line" />

            <!-- Guest Login Form -->
            <VBox alignment="TOP_CENTER" spacing="15" styleClass="login-form">
                <Label styleClass="subtitle" text="Continue as Guest" />
                <Label styleClass="input-label" text="Username" labelFor="$guestUsernameField"/>
                <TextField fx:id="guestUsernameField" promptText="Enter your username" styleClass="input-field" />
                <Button fx:id="guestLoginButton" onAction="#onGuestLoginClicked" styleClass="login-button" text="Sign in" />
            </VBox>
        </HBox>
    </AnchorPane>

    <!-- CSS Stylesheet -->
    <stylesheets>
        <URL value="@/css/login.css" />
    </stylesheets>
</StackPane>
